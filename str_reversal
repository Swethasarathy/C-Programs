#include<stdio.h>
#include<string.h>
void main()
{
char str1[20],str2[20];
int i=0,j,n,flag=0,count=0;
printf("\nEnter a string : ");
scanf("%s",str1);
while(str1[i]!='\0')
{
flag++;
i++;
}
n = flag;
i=0;
j=n-1;
while(i<=n-1)
{
str2[i] = str1[j];
i++;
j--;
}
str2[i]='\0';
printf("\nThe original string is %s",str1);
printf("\nThe reversed string is %s",str2);
}
